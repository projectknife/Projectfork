<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="title" type="text" label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC" class="inputbox" size="30"
			required="true" 
        />
		<field name="description" type="text" class="inputbox" size="60" maxlength="255"
			label="COM_PROJECTFORK_FIELD_DESCRIPTION_LABEL" description="COM_PROJECTFORK_FIELD_DESCRIPTION_DESC"
		/>
		<field name="state" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="inputbox"
			filter="intval" size="1" default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" class="inputbox" size="1" 
        />
		<field
			name="buttonspacer"
			description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
			type="spacer" 
        />
        <field name="created_by" type="user"
			label="COM_PROJECTFORK_FIELD_CREATED_BY_LABEL" description="COM_PROJECTFORK_FIELD_MILESTONE_CREATED_BY_DESC"
        />
		<field name="start_date" type="calendar" class="inputbox"
			label="COM_PROJECTFORK_FIELD_MILESTONE_START_DATE_LABEL" description="COM_PROJECTFORK_FIELD_MILESTONE_START_DATE_DESC"
			size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" 
        />
        <field name="end_date" type="calendar" class="inputbox"
			label="COM_PROJECTFORK_FILED_DEADLINE_LABEL" description="COM_PROJECTFORK_FIELD_MILESTONE_END_DATE_DESC"
			size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" 
        />
		<field name="modified" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" 
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" 
        />
		<field name="modified_by" type="user"
		    label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		    class="readonly"
		    readonly="true"
		    filter="unset"
		/>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_projectfork"
			section="milestone" 
        />
		<field name="id" type="hidden" readonly="true"/>
		<field name="asset_id" type="hidden" filter="unset"/>
		<field name="alias" type="hidden" readonly="true"/>
		<field name="created" type="hidden" readonly="true"/>
		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
	</fieldset>
	<fields name="attribs">
	    <fieldset name="basic" label="COM_PROJECTFORK_MILESTONE_ATTRIBS_FIELDSET_LABEL">
	        
	    </fieldset>
	</fields>
</form>